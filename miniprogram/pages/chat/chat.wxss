page { 
  background: #F6F6F6; 
  height: 100vh; /* 锁定高度 */
  overflow: hidden; /* 禁止页面整体滚动，只允许 scroll-view 滚 */
}

.container { 
  height: 100%; 
  display: flex; 
  flex-direction: column; 
}

/* 自定义头部 - 固定且置顶 */
.custom-header {
  position: fixed; 
  top: 0; 
  left: 0; 
  width: 100%; 
  background: #EDEDED; 
  z-index: 999; /* 确保在最上层 */
  border-bottom: 1rpx solid #dcdcdc;
  display: flex; 
  align-items: center;
}

.header-row { 
  width: 100%; 
  height: 100%; 
  display: flex; 
  align-items: center; 
  padding: 0 20rpx; 
  position: relative; 
}

.back-btn { 
  font-size: 40rpx; 
  padding: 10rpx 20rpx; 
  font-weight: bold; 
  z-index: 1000;
}

.header-title { 
  position: absolute; 
  left: 50%; 
  transform: translateX(-50%); 
  font-weight: bold; 
  font-size: 30rpx; 
  max-width: 60%; 
  overflow: hidden; 
  white-space: nowrap; 
  text-overflow: ellipsis; 
}

/* 滚动区域 */
.chat-scroll { 
  width: 100%; 
  height: 100%; /* 占满剩余空间 */
  box-sizing: border-box; 
  /* 这里的 padding-top 会在 wxml 里通过 style 动态覆盖，以适配不同机型 */
}

/* 消息容器 */
.msg-container {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}
.align-left { align-items: flex-start; }
.align-right { align-items: flex-end; }

/* 消息行 */
.msg-row { display: flex; align-items: flex-start; }
.avatar { width: 80rpx; height: 80rpx; border-radius: 10rpx; background: #ddd; }
.bubble { 
  max-width: 480rpx; 
  padding: 20rpx; 
  border-radius: 16rpx; 
  font-size: 30rpx; 
  line-height: 1.4; 
  position: relative; 
  margin: 0 20rpx; 
  word-break: break-all; 
}

.other-msg { flex-direction: row; }
.other-msg .bubble { background: #fff; color: #333; }

.my-msg { flex-direction: row-reverse; }
.my-msg .bubble { background: #95EC69; color: #000; }

/* 状态栏样式 */
.status-row { margin-top: 4rpx; margin-right: 110rpx; text-align: right; }
.read-txt { font-size: 20rpx; color: #999; }
.read-txt.un { color: #ccc; }

/* 底部输入框 */
.input-area {
  position: fixed; 
  bottom: 0; 
  width: 100%; 
  background: #F6F6F6;
  padding: 20rpx; 
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex; 
  align-items: center; 
  border-top: 1rpx solid #ddd;
  z-index: 1000; /* 确保在最上层 */
}

.msg-input { 
  flex: 1; 
  background: #fff; 
  height: 72rpx; 
  border-radius: 10rpx; 
  padding: 0 20rpx; 
  font-size: 30rpx; 
}

.send-btn { 
  width: 120rpx !important; 
  height: 72rpx; 
  margin-left: 20rpx; 
  background: #07C160; 
  color: #fff; 
  font-size: 28rpx; 
  padding: 0; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  border-radius: 10rpx; 
}