.container { padding: 30rpx; padding-bottom: 100rpx; }
.title-bar { font-size: 36rpx; font-weight: 800; margin-bottom: 30rpx; padding-left: 10rpx; }

.section { border-radius: 24rpx; padding: 0 30rpx; margin-bottom: 30rpx; background: #fff; }
.section-title { font-size: 26rpx; color: #666; margin-bottom: 16rpx; padding-left: 10rpx; }

.form-item {
  display: flex; justify-content: space-between; align-items: center;
  padding: 30rpx 0; border-bottom: 1px solid #f5f5f5;
}
.form-item:last-child { border-bottom: none; }

.label { font-size: 30rpx; font-weight: 600; min-width: 160rpx; }
.input-box { flex: 1; text-align: right; color: #333; display: flex; justify-content: flex-end; align-items: center;}
.arrow { color: #ccc; margin-left: 10rpx; font-family: monospace; }
.placeholder { color: #ccc; }

.layout-picker { display: flex; align-items: center; }
.layout-picker input { width: 60rpx; text-align: center; border-bottom: 1px solid #ddd; margin: 0 10rpx; font-weight: bold; }

/* 房间行样式 */
.room-row { padding: 30rpx 0; }
.room-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20rpx; }
.room-idx { font-weight: 800; font-size: 28rpx; color: var(--xhs-red); }
.status-txt { font-size: 24rpx; color: #999; margin-left: 10rpx; }

.room-inputs { display: flex; gap: 20rpx; margin-bottom: 20rpx; }
.room-inputs input {
  background: #F9F9F9; padding: 16rpx; border-radius: 12rpx;
  font-size: 26rpx; flex: 1; text-align: center;
}

.upload-sim {
  width: 160rpx; height: 160rpx; background: #f0f0f0; border-radius: 16rpx;
  display: flex; align-items: center; justify-content: center; color: #aaa; font-size: 24rpx;
  overflow: hidden;
}
.upload-sim .thumb { width: 100%; height: 100%; }

textarea { width: 100%; height: 200rpx; padding: 30rpx 0; font-size: 28rpx; line-height: 1.5; }

/* 覆盖原有按钮样式，使其更明显 */
.pub-btn {
  background: #FF2442 !important; /* 强制小红书红 */
  color: #ffffff !important;
  font-weight: bold;
  font-size: 32rpx;
  height: 96rpx;
  line-height: 64rpx; /* 垂直居中微调 */
  border-radius: 48rpx;
  width: 90% !important;
  margin: 60rpx auto;
  box-shadow: 0 8rpx 20rpx rgba(255, 36, 66, 0.3); /* 红色投影 */
  opacity: 1 !important; /* 防止被disabled样式影响 */
}

.page-header {
  font-size: 40rpx;
  font-weight: 900;
  margin-bottom: 40rpx;
  padding-left: 10rpx;
  color: #333;
}
.divider { height: 1px; background: #eee; }