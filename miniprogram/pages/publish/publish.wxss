page{background:#F6F6F6; padding:0 30rpx;}
.card{background:#fff; border-radius:20rpx; padding:0 30rpx; margin-bottom:30rpx;}
.row{height:100rpx; display:flex; justify-content:space-between; align-items:center; border-bottom:1rpx solid #f5f5f5;}
.lbl{font-weight:bold;}
.s-in{width:80rpx; background:#f5f5f5; text-align:center; height:60rpx; margin:0 10rpx; border-radius:8rpx;}
.s-in.highlight{background:#FFF0F5; color:#FF2442;}
.room-card{padding:30rpx;}
.room-card.occ{background:#fafafa;}
.r-head{display:flex; justify-content:space-between; margin-bottom:20rpx;}
.badge{font-weight:900; color:#FF2442;}
.sw-box{font-size:24rpx; color:#999; display:flex; align-items:center;}
.flex{display:flex; align-items:center;}
.mb{margin-bottom:20rpx;}
.m-in{background:#f9f9f9; height:70rpx; text-align:center; flex:1; margin-right:10rpx; border-radius:10rpx; font-size:26rpx;}
.m-in.red{color:#FF2442; font-weight:bold;}
.sec-box{background:#f0f2f5; padding:20rpx; border-radius:12rpx; margin-bottom:20rpx;}
.p-row{display:flex; justify-content:space-between; margin-bottom:10rpx;}
.sub-form{display:flex; gap:10rpx;}
.pk-box{background:#fff; padding:10rpx 20rpx; font-size:24rpx; border-radius:8rpx; flex:1; text-align:center; border:1rpx solid #eee;}
.pk-val{font-weight:bold; color:#333;}
.photo-upload{width:180rpx; height:240rpx; border:2rpx dashed #ccc; border-radius:12rpx; display:flex; align-items:center; justify-content:center; overflow:hidden; background:#fff;}
.pv-img{width:100%; height:100%;}
.pub-btn{position:fixed; bottom:40rpx; left:5%; width:90%; background:#FF2442; color:#fff; border-radius:50rpx; z-index:99;}