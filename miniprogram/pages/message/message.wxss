page { background: #fff; height: 100%; }

.container { 
  height: 100%; 
  display: flex; 
  flex-direction: column; 
}

.tabs { 
  display: flex; 
  padding: 0 30rpx; 
  border-bottom: 1rpx solid #f5f5f5; 
  margin-bottom: 0;
  background: #fff;
  flex-shrink: 0;
  z-index: 10;
}
.tab { font-size: 32rpx; color: #999; margin-right: 40rpx; padding: 24rpx 0; position: relative; transition: all 0.3s;}
.tab.active { color: #1C1C1E; font-weight: 800; font-size: 36rpx; }
.dot { width: 14rpx; height: 14rpx; background: #FF2442; border-radius: 50%; position: absolute; top: 28rpx; right: -6rpx; border: 2rpx solid #fff; }

/* 列表容器 */
.list-box { 
  flex: 1; 
  display: flex; 
  flex-direction: column; 
  width: 100%;
  overflow-y: auto; 
  padding-bottom: 100rpx;
}

/* 空状态居中 */
.empty-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 150rpx;
  min-height: 400rpx; 
}

.chat-item { display: flex; padding: 24rpx 32rpx; align-items: center; width: 100%; box-sizing: border-box; flex-shrink: 0; }
.chat-item:active { background: #f9f9f9; }
.avatar-box { position: relative; margin-right: 24rpx; flex-shrink: 0; }

.group-avatar {
  width: 100rpx; height: 100rpx;
  background: #f7f7f7;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
  padding: 6rpx;
  box-sizing: border-box;
  justify-content: center;
  align-content: center;
  gap: 4rpx;
  overflow: hidden;
}
.g-avt { width: 40rpx; height: 40rpx; border-radius: 6rpx; background: #ddd; }
.g-avt:only-child { width: 100%; height: 100%; border-radius: 12rpx; }

.red-badge { width: 18rpx; height: 18rpx; background: #FF2442; border-radius: 50%; position: absolute; top: -4rpx; right: -4rpx; border: 3rpx solid #fff; }

.content { flex: 1; border-bottom: 1rpx solid #f9f9f9; padding-bottom: 24rpx; display: flex; flex-direction: column; justify-content: space-between; height: 90rpx; min-width: 0;}
.top { display: flex; justify-content: space-between; align-items: center; }
.name { font-size: 32rpx; font-weight: 600; color: #1C1C1E; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; flex: 1; margin-right: 20rpx;}
.time { font-size: 22rpx; color: #ccc; flex-shrink: 0;}
.btm { display: flex; }
.last-msg { font-size: 26rpx; color: #999; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 500rpx; }

.notif-card { margin: 24rpx 32rpx; padding: 30rpx; background: #fff; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.03); border-radius: 24rpx; border: 1rpx solid #fcfcfc; position: relative; flex-shrink: 0; }
.n-icon { font-size: 44rpx; margin-right: 24rpx; width: 70rpx; text-align: center; position: relative; flex-shrink: 0; }
.mini-dot { width: 14rpx; height: 14rpx; background: #FF2442; border-radius: 50%; position: absolute; top: 0; right: 10rpx; border: 2rpx solid #fff; }
.notif-card.simple { display: flex; align-items: flex-start; }
.n-info { flex: 1; }
.n-title { font-weight: 600; font-size: 30rpx; margin-bottom: 8rpx; color: #333; }
.n-desc { font-size: 28rpx; color: #666; margin-bottom: 12rpx; line-height: 1.4; }
.n-time { font-size: 22rpx; color: #ccc; }
.req-head { display: flex; justify-content: space-between; font-size: 24rpx; color: #999; margin-bottom: 24rpx; border-bottom: 1rpx solid #f5f5f5; padding-bottom: 16rpx; }
.rh-box { display: flex; align-items: center; }
.rh-box .mini-dot { position: static; margin-left: 10rpx; border: none; }
.req-user { display: flex; align-items: center; margin-bottom: 24rpx; }
.u-avt { width: 88rpx; height: 88rpx; border-radius: 50%; background: #eee; margin-right: 24rpx; }
.u-n { font-weight: 600; font-size: 30rpx; color: #1C1C1E; }
.u-d { font-size: 24rpx; color: #666; margin-top: 6rpx; }
.view-dtl { font-size: 24rpx; color: #007AFF; margin-left: auto; font-weight: 500; }
.req-actions { display: flex; gap: 20rpx; justify-content: flex-end; }
.btn { margin: 0; font-size: 26rpx; padding: 0 32rpx; height: 60rpx; line-height: 60rpx; border-radius: 30rpx; }
.agree { background: #1C1C1E; color: #fff; }
.reject { background: #f5f5f5; color: #666; }
.req-res { text-align: right; font-size: 26rpx; color: #999; font-weight: bold; }

.empty-visual { width: 220rpx; height: 220rpx; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 40rpx; position: relative; }
.chat-bg { background: #FFF0F5; }
.notif-bg { background: #F0F8FF; }
.empty-emoji { font-size: 90rpx; }
.bubble-dec { width: 36rpx; height: 36rpx; background: #FFD1DC; border-radius: 50%; position: absolute; top: 40rpx; right: 40rpx; border: 4rpx solid #fff; }
.empty-title { font-size: 36rpx; font-weight: 800; color: #333; margin-bottom: 16rpx; }
.empty-desc { font-size: 28rpx; color: #999; margin-bottom: 60rpx; }
.empty-btn { background: #1C1C1E; color: #fff; padding: 24rpx 88rpx; border-radius: 50rpx; font-size: 30rpx; font-weight: 600; box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.15); transition: opacity 0.2s; }
.empty-btn:active { opacity: 0.8; transform: scale(0.98); }