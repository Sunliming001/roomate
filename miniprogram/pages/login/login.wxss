.container { padding: 100rpx 60rpx; background: #fff; height: 100vh; box-sizing: border-box; display: flex; flex-direction: column; align-items: center; }

.header { width: 100%; margin-bottom: 80rpx; text-align: center; }
.title { font-size: 44rpx; font-weight: 600; color: #333; margin-bottom: 16rpx; }
.sub-title { font-size: 28rpx; color: #999; }

/* 头像按钮：强制正圆 */
.avatar-wrapper {
  padding: 0;
  width: 180rpx !important; /* 强制宽度 */
  height: 180rpx !important; /* 强制高度 */
  border-radius: 50%; /* 圆形 */
  margin-bottom: 60rpx;
  background: #F2F2F2;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  display: flex; align-items: center; justify-content: center;
  overflow: hidden; /* 裁剪图片 */
}

.avatar-img { width: 100%; height: 100%; display: block; }
.camera-icon { font-size: 60rpx; color: #ccc; }

.form-area { width: 100%; }
.input-group { margin-bottom: 40rpx; }
.label { font-size: 30rpx; font-weight: 600; color: #333; margin-bottom: 20rpx; }
.input { 
  background: #F6F6F6; height: 96rpx; padding: 0 30rpx; 
  border-radius: 48rpx; /* 大圆角输入框 */
  font-size: 32rpx; color: #333;
}

.radio-row { display: flex; gap: 40rpx; justify-content: center; margin-top: 20rpx;}

.tags-container { display: flex; flex-wrap: wrap; gap: 20rpx; }
.tag { 
  padding: 14rpx 30rpx; background: #F6F6F6; border-radius: 40rpx; 
  font-size: 28rpx; color: #666; 
}
.tag.active { background: #FF2442; color: #fff; font-weight: 600; }

.save-btn { 
  width: 100% !important; height: 96rpx; line-height: 64rpx;
  background: #FF2442; color: #fff; border-radius: 48rpx; 
  font-size: 34rpx; font-weight: 600; margin-top: 40rpx; 
}