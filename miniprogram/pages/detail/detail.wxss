/* 全局背景 */
page { background: #F2F2F7; }

/* --- 顶部导航栏 --- */
.custom-header {
  position: fixed; top: 0; left: 0; width: 100%; 
  background: #fff; z-index: 999; 
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}
.header-row { 
  height: 44px; display: flex; align-items: center; 
  padding: 0 20rpx; position: relative; 
}
.header-title {
  position: absolute; left: 50%; transform: translateX(-50%);
  font-weight: 700; font-size: 32rpx; color: #1C1C1E;
}

/* Q版返回按钮 */
.back-btn-q { 
  width: 64rpx; height: 64rpx; 
  background: #F2F2F7; border-radius: 50%; 
  display: flex; align-items: center; justify-content: center; 
}
.arrow-icon {
  width: 18rpx; height: 18rpx;
  border-left: 4rpx solid #1C1C1E;
  border-bottom: 4rpx solid #1C1C1E;
  transform: rotate(45deg); margin-left: 6rpx;
}

/* 相册 */
.swiper { height: 600rpx; background: #fff; }
.slide-img { width: 100%; height: 100%; }
.slide-label { 
  position: absolute; bottom: 60rpx; right: 30rpx; 
  background: rgba(0,0,0,0.6); color: #fff; 
  font-size: 24rpx; padding: 6rpx 16rpx; border-radius: 8rpx; 
}

/* 内容层 */
.content { position: relative; top: -40rpx; padding: 0 30rpx; }
.card { 
  background: #FFF; border-radius: 24rpx; padding: 30rpx; 
  margin-bottom: 20rpx; box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.04); 
}
.title-card { display: flex; flex-direction: column; align-items: flex-start; }
.h1 { font-size: 36rpx; font-weight: 900; color: #1C1C1E; margin-bottom: 10rpx; }
.price { font-size: 36rpx; color: #FF2442; font-weight: bold; margin-bottom: 16rpx; }
.sub { font-size: 24rpx; color: #999; font-weight: normal; }

/* 新增：宠物标签样式 */
.pet-row { width: 100%; }
.pet-tag {
  display: inline-block;
  font-size: 24rpx;
  color: #1C1C1E;
  background: #F5F5F7;
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.st { font-weight: bold; margin-bottom: 20rpx; font-size: 30rpx; }

.room-row { display: flex; justify-content: space-between; border-bottom: 1rpx solid #f5f5f5; padding: 24rpx 0; }
.rname { font-weight: bold; font-size: 28rpx; }
.tg { font-size: 20rpx; background: #F5F5F7; color: #666; padding: 4rpx 10rpx; margin-right: 8rpx; border-radius: 6rpx; }
.rr-r { text-align: right; }
.occ-badge { font-size: 22rpx; color: #999; background: #F2F2F7; padding: 4rpx 12rpx; border-radius: 20rpx; display: inline-block; }
.occ-info { font-size: 24rpx; color: #666; margin-top: 6rpx; }
.vac-price { color: #FF2442; font-weight: bold; }
.exp-txt { font-size: 22rpx; color: #999; }

.pub-card { display: flex; align-items: center; }
.p-avt { width: 88rpx; height: 88rpx; border-radius: 50%; margin-right: 24rpx; background: #eee; }
.pn { font-weight: bold; font-size: 32rpx; }
.pt { font-size: 22rpx; background: #1C1C1E; color: #fff; padding: 2rpx 10rpx; border-radius: 6rpx; margin-top: 6rpx; display: inline-block;}

/* 底部栏 */
.footer-bar { 
  position: fixed; bottom: 0; left: 0; width: 100%; 
  background: #fff; display: flex; align-items: center; 
  padding: 20rpx 30rpx; box-sizing: border-box; 
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05); 
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom)); 
  z-index: 99;
}
.icon-btn { 
  display: flex; flex-direction: column; align-items: center; 
  margin-right: 40rpx; color: #666; font-size: 20rpx; 
  background: none; padding: 0; line-height: 1.2; border: none;
}
.icon-btn::after { border: none; }
.icon { font-size: 36rpx; margin-bottom: 6rpx; }

.chat-btn { 
  background: #F2F2F7; color: #1C1C1E; height: 88rpx; border-radius: 44rpx; 
  display: flex; align-items: center; justify-content: center; 
  padding: 0 40rpx; font-weight: bold; margin-right: 20rpx; font-size: 28rpx; 
}
.join-btn { 
  flex: 1; background: #FF2442; color: #fff; height: 88rpx; 
  border-radius: 44rpx; display: flex; align-items: center; 
  justify-content: center; font-weight: bold; font-size: 28rpx; margin: 0;
}

/* 弹窗通用 */
.modal-mask, .share-mask { 
  position: fixed; top: 0; left: 0; width: 100%; height: 100%; 
  background: rgba(0,0,0,0.5); z-index: 200; 
  display: flex; align-items: flex-end; 
}
.modal-content, .share-panel { 
  width: 100%; background: #fff; 
  border-radius: 32rpx 32rpx 0 0; padding: 40rpx; 
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom)); 
}

/* 加入列表 */
.m-title { font-size: 32rpx; font-weight: bold; margin-bottom: 30rpx; text-align: center; }
.m-item { display: flex; justify-content: space-between; align-items: center; padding: 30rpx 0; border-bottom: 1rpx solid #f5f5f5; }
.m-name { font-weight: bold; font-size: 30rpx; }
.m-price { color: #FF2442; font-weight: bold; }
.m-btn { background: #FF2442; color: #fff; font-size: 24rpx; padding: 12rpx 24rpx; border-radius: 30rpx; }

/* 分享列表 */
.share-title { text-align: center; font-size: 28rpx; color: #999; margin-bottom: 30rpx; }
.share-grid { display: flex; flex-wrap: wrap; background: #fff; padding: 30rpx 0; }
.share-item { width: 25%; display: flex; flex-direction: column; align-items: center; margin-bottom: 30rpx; background: #fff; border: none; padding: 0; line-height: normal; }
.share-item::after { border: none; }
.s-icon { width: 90rpx; height: 90rpx; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 40rpx; margin-bottom: 12rpx; color: #fff; }
.s-icon.wx { background: #07C160; }
.s-icon.pyq { background: #7bb32e; }
.s-icon.qq { background: #4FA9FF; }
.s-icon.xhs { background: #FF2442; }
.s-icon.wb { background: #E6162D; }
.s-icon.link { background: #666; }
.share-item text { font-size: 24rpx; color: #666; }
.share-cancel { margin-top: 20rpx; background: #F9F9F9; text-align: center; padding: 24rpx; font-size: 30rpx; border-radius: 16rpx; font-weight: 600;}
