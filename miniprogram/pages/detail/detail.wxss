/* 保持全局灰色背景 */
page { background-color: #F6F6F6; }

/* 顶部导航 */
.custom-nav { position: fixed; top: 0; left: 0; width: 100%; z-index: 100; display: flex; align-items: center; padding-left: 30rpx; }
.back-btn { width: 64rpx; height: 64rpx; background: rgba(0,0,0,0.5); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: #fff; font-weight: bold; backdrop-filter: blur(4px); }

/* 顶部背景图 */
.header-img { width: 100%; height: 500rpx; position: fixed; top: 0; left: 0; z-index: -1; }

/* 内容层上浮 */
.content-layer { margin-top: 420rpx; padding: 0 30rpx; }

/* 卡片通用样式 */
.card { background: #fff; border-radius: 24rpx; padding: 30rpx; margin-bottom: 24rpx; box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.04); }
.glass { background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px); }

.title-row { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16rpx; }
.title { font-size: 40rpx; font-weight: 900; color: #333; }
.price-tag { color: #FF2442; font-size: 36rpx; font-weight: bold; }
.sub-info { display: flex; gap: 20rpx; }
.tag { font-size: 24rpx; color: #666; background: #F5F5F7; padding: 6rpx 16rpx; border-radius: 8rpx; }

.sec-title { font-size: 30rpx; font-weight: bold; margin-bottom: 20rpx; border-left: 8rpx solid #FF2442; padding-left: 16rpx; }

/* 房间列表 */
.room-item { display: flex; justify-content: space-between; align-items: center; padding: 20rpx 0; border-bottom: 1rpx solid #eee; }
.room-item:last-child { border: none; }
.r-name { font-weight: bold; font-size: 28rpx; }
.r-area { font-size: 24rpx; color: #999; margin-top: 4rpx; }
.r-status { font-size: 26rpx; padding: 6rpx 20rpx; border-radius: 30rpx; font-weight: bold; }
.r-status.full { background: #eee; color: #999; }
.r-status.empty { background: #E8F5E9; color: #4CAF50; }

/* 用户信息 */
.user-card { display: flex; align-items: center; }
.u-avt { width: 100rpx; height: 100rpx; border-radius: 50%; margin-right: 24rpx; border: 1rpx solid #eee; }
.u-info { flex: 1; }
.u-row { display: flex; align-items: center; margin-bottom: 8rpx; }
.u-n { font-weight: bold; font-size: 32rpx; margin-right: 12rpx; }
.u-role { font-size: 20rpx; background: #FF2442; color: #fff; padding: 2rpx 8rpx; border-radius: 4rpx; }
.u-tags text { font-size: 22rpx; color: #666; margin-right: 10rpx; background: #F5F5F7; padding: 2rpx 8rpx; border-radius: 4rpx; }
.chat-icon { font-size: 44rpx; padding: 10rpx; }

.desc-text { font-size: 28rpx; color: #444; line-height: 1.6; }

/* 底部栏 - 修复溢出问题 */
.footer-bar {
  position: fixed; bottom: 0; left: 0; width: 100%;
  background: #fff;
  padding: 20rpx 40rpx;
  /* 增加安全区 */
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex; align-items: center;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  box-sizing: border-box; /* 关键 */
}
.icon-btn { display: flex; flex-direction: column; align-items: center; margin-right: 40rpx; font-size: 22rpx; color: #666; }
.icon-btn .icon { font-size: 40rpx; margin-bottom: 4rpx; }

.action-btn {
  flex: 1;
  background: #FF2442; color: #fff;
  border-radius: 44rpx;
  height: 88rpx; line-height: 88rpx;
  font-size: 32rpx; font-weight: bold;
  margin: 0; /* 去掉默认margin */
}