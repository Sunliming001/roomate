.header-img { width: 100%; height: 500rpx; position: fixed; top: 0; z-index: -1; }
.content-layer { margin-top: 420rpx; padding: 30rpx; padding-bottom: 140rpx; }

.card { background: #fff; border-radius: 24rpx; padding: 30rpx; margin-bottom: 30rpx; box-shadow: var(--card-shadow); }
.glass-panel { background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px); }

.title { font-size: 40rpx; font-weight: 800; margin-bottom: 20rpx; color: #1d1d1f; }
.sub-info .tag { 
  background: #F5F5F7; color: #666; font-size: 24rpx; 
  padding: 8rpx 16rpx; border-radius: 8rpx; margin-right: 16rpx; 
}

/* 用户卡片 */
.user-card { display: flex; flex-direction: column; }
.user-top { display: flex; align-items: center; margin-bottom: 20rpx; }
.u-avatar { width: 100rpx; height: 100rpx; border-radius: 50%; margin-right: 24rpx; background:#eee; }
.u-name { font-size: 32rpx; font-weight: bold; margin-right: 10rpx; }
.gender-icon { font-size: 24rpx; padding: 2rpx 8rpx; border-radius: 8rpx; color: #fff; }
.gender-icon.boy { background: #64B5F6; }
.gender-icon.girl { background: #F48FB1; }
.u-base-info { font-size: 26rpx; color: #666; margin-top: 8rpx; }

.u-tags-row { display: flex; flex-wrap: wrap; gap: 16rpx; }
.tag-badge { 
  background: #F0F2F5; color: #555; font-size: 22rpx; 
  padding: 6rpx 16rpx; border-radius: 20rpx; 
}

/* 房间列表 */
.table-header { display: flex; font-size: 24rpx; color: #999; margin-bottom: 20rpx; }
.table-header text { flex: 1; text-align: center; }
.table-row { display: flex; align-items: center; padding: 20rpx 0; border-top: 1px solid #eee; }
.table-row text { flex: 1; text-align: center; font-size: 28rpx; }
.t-name { font-weight: bold; }
.t-price { color: #FF2442; font-weight: bold; }
.badge { font-size: 20rpx; padding: 4rpx 12rpx; border-radius: 20rpx; color: #fff; }
.badge.green { background: #07C160; }
.badge.gray { background: #ccc; }
.disabled { opacity: 0.5; }

.desc-box { font-size: 28rpx; line-height: 1.6; color: #444; }
.time { margin-top: 20rpx; font-size: 22rpx; color: #ccc; text-align: right; }

.footer {
  position: fixed; bottom: 0; left: 0; width: 100%;
  display: flex; justify-content: space-between; align-items: center;
  padding: 20rpx 40rpx; box-sizing: border-box;
  border-top: 1px solid rgba(0,0,0,0.05);
}
.fav-icon { font-size: 28rpx; color: #666; }
.join-btn { background: #333; color: #fff; border-radius: 40rpx; padding: 0 60rpx; margin: 0; }