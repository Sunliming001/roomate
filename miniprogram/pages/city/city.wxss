page { background: #fff; }
.container { padding: 0 30rpx; }

.nav-bar { height: 44px; display: flex; align-items: center; margin-bottom: 20rpx; position: relative; }
.back { font-size: 40rpx; color: #333; padding: 10rpx; position: absolute; left: 0; font-weight: bold;}
.title { flex: 1; text-align: center; font-weight: bold; font-size: 32rpx; }

.section { margin-bottom: 50rpx; }
.sec-title { font-size: 26rpx; color: #999; margin-bottom: 24rpx; }

.grid-box { display: flex; flex-wrap: wrap; gap: 20rpx; }
.city-tag { width: 30%; height: 72rpx; background: #F5F7FA; border-radius: 8rpx; display: flex; align-items: center; justify-content: center; font-size: 28rpx; color: #333; font-weight: 500; }
.city-tag:active { background: #EDF2F7; }

.location { background: #fff; border: 1rpx solid #eee; width: auto; padding: 0 40rpx; display: inline-flex; }
.icon { margin-right: 8rpx; }

.picker-btn { width: 100%; height: 88rpx; background: #fff; border: 1rpx solid #eee; border-radius: 8rpx; display: flex; align-items: center; justify-content: space-between; padding: 0 30rpx; box-sizing: border-box; font-size: 30rpx; color: #333; }
.arrow { color: #ccc; font-family: monospace; }