page { background: #F6F6F6; }
.container { padding: 0 30rpx 60rpx 30rpx; }

.page-title { font-size: 40rpx; font-weight: 900; margin-bottom: 30rpx; color: #333; }

.group-card {
  background: #fff; border-radius: 24rpx; overflow: hidden; margin-bottom: 40rpx; padding: 0 30rpx;
}

.cell-row {
  display: flex; justify-content: space-between; align-items: center; height: 110rpx;
  border-bottom: 1rpx solid #f5f5f5; background: #fff; padding: 0; margin: 0; width: 100%; font-weight: normal; font-size: 30rpx;
}
.cell-row.last { border-bottom: none; }
button.cell-row::after { border: none; }

.cell-lbl { color: #333; font-weight: bold; }
.cell-val { display: flex; align-items: center; color: #666; }
.cell-inp { text-align: right; color: #333; font-weight: bold; height: 100%; }

.avatar { width: 80rpx; height: 80rpx; border-radius: 50%; background: #eee; margin-right: 10rpx; }
.arrow { color: #ccc; font-family: monospace; margin-left: 8rpx; }

.section-header { margin-bottom: 24rpx; display: flex; align-items: baseline; }
.section-header text { font-weight: bold; font-size: 30rpx; color: #333; margin-right: 16rpx; }
.section-header .sub { font-weight: normal; font-size: 24rpx; color: #999; }

.tags-wrap { display: flex; flex-wrap: wrap; gap: 20rpx; margin-bottom: 30rpx; }
.tag-pill {
  padding: 12rpx 30rpx; background: #fff; border-radius: 40rpx; font-size: 26rpx; color: #666;
  border: 2rpx solid transparent; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02); transition: all 0.2s;
}
.tag-pill.active { background: #333; color: #fff; border-color: #333; transform: scale(1.05); }

.custom-input-box { display: flex; gap: 20rpx; margin-bottom: 60rpx; }
.c-in { flex: 1; background: #fff; height: 80rpx; border-radius: 16rpx; padding: 0 30rpx; font-size: 28rpx; }
.c-btn { width: 100rpx; height: 80rpx; background: #333; color: #fff; border-radius: 16rpx; display: flex; align-items: center; justify-content: center; font-size: 40rpx; font-weight: bold; }

.save-btn {
  background: #FF2442; color: #fff; font-weight: bold; border-radius: 50rpx; height: 96rpx; line-height: 96rpx; width: 100% !important; margin: 0; box-shadow: 0 8rpx 20rpx rgba(255, 36, 66, 0.2);
}