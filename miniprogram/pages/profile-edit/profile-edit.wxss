page { background: #F6F6F6; } /* 保持浅灰背景 */

.container { 
  padding: 30rpx 32rpx 80rpx 32rpx; 
}

.page-title { 
  font-size: 44rpx; 
  font-weight: 900; 
  margin-bottom: 40rpx; 
  color: #1C1C1E; 
  margin-left: 10rpx;
}

/* 信息卡片 - 纯白背景，圆角大 */
.group-card {
  background: #FFFFFF; 
  border-radius: 32rpx; 
  overflow: hidden; 
  margin-bottom: 60rpx; /* 增加间距 */
  padding: 0 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.03); /* 轻微投影 */
}

.cell-row {
  display: flex; 
  justify-content: space-between; 
  align-items: center; 
  height: 120rpx; /* 稍微增高 */
  border-bottom: 1rpx solid #F0F0F2; 
  background: #fff; 
  padding: 0; 
  margin: 0; 
  width: 100%; 
  font-weight: normal; 
  font-size: 30rpx;
}
.cell-row.last { border-bottom: none; }
button.cell-row::after { border: none; }

.cell-lbl { color: #1C1C1E; font-weight: 600; font-size: 32rpx; }
.cell-val { display: flex; align-items: center; color: #8E8E93; }
.cell-inp { text-align: right; color: #1C1C1E; font-weight: 600; height: 100%; font-size: 32rpx;}

.avatar { width: 96rpx; height: 96rpx; border-radius: 50%; background: #F2F2F7; margin-right: 16rpx; }
.arrow { color: #C7C7CC; font-family: monospace; margin-left: 10rpx; font-weight: bold; }

/* 标签区域 */
.section-header { 
  margin-bottom: 30rpx; 
  display: flex; 
  align-items: baseline; 
  padding-left: 10rpx;
}
.section-header text { font-weight: 800; font-size: 34rpx; color: #1C1C1E; margin-right: 16rpx; }
.section-header .sub { font-weight: normal; font-size: 24rpx; color: #AEAEB2; }

.tags-wrap { 
  display: flex; 
  flex-wrap: wrap; 
  gap: 24rpx; 
  margin-bottom: 40rpx; 
  padding-left: 10rpx;
}

.tag-pill {
  padding: 14rpx 36rpx; 
  background: #FFFFFF; 
  border-radius: 40rpx; 
  font-size: 28rpx; 
  color: #666;
  border: 2rpx solid #E5E5EA; /* 淡边框 */
  transition: all 0.2s;
}

.tag-pill.active {
  background: #1C1C1E; /* 选中黑色，如iOS */
  color: #FFF;
  border-color: #1C1C1E;
  font-weight: 600;
  transform: scale(1.02);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

/* 自定义输入框 */
.custom-input-box { 
  display: flex; gap: 20rpx; margin-bottom: 80rpx; padding: 0 10rpx;
}
.c-in { 
  flex: 1; 
  background: #FFFFFF; 
  height: 88rpx; 
  border-radius: 20rpx; 
  padding: 0 30rpx; 
  font-size: 30rpx; 
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.03);
}
.c-btn { 
  width: 100rpx; 
  height: 88rpx; 
  background: #E5E5EA; 
  color: #666; 
  border-radius: 20rpx; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  font-size: 48rpx; 
  font-weight: 300; 
}
.c-btn:active { background: #d1d1d6; }

.save-btn {
  background: #FF2442; 
  color: #fff; 
  font-weight: bold; 
  border-radius: 56rpx; 
  height: 100rpx; 
  line-height: 100rpx; 
  width: 90% !important; 
  margin: 0 auto; 
  box-shadow: 0 12rpx 30rpx rgba(255, 36, 66, 0.25);
}