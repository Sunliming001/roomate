page { background: #F6F6F6; }
.container { padding: 0 30rpx; }
.page-title { font-size: 40rpx; font-weight: 900; margin-bottom: 30rpx; }
.form-card { background: #fff; border-radius: 20rpx; padding: 0 30rpx; margin-bottom: 30rpx; }
.avatar-row { display: flex; justify-content: space-between; align-items: center; height: 120rpx; border-bottom: 1rpx solid #f5f5f5; background: #fff; padding: 0; margin: 0; width: 100% !important; font-weight: normal;}
.label { font-size: 30rpx; color: #333; }
.avatar { width: 80rpx; height: 80rpx; border-radius: 50%; background: #eee; }
.input-row { display: flex; justify-content: space-between; align-items: center; height: 100rpx; border-bottom: 1rpx solid #f5f5f5; }
.val-input { text-align: right; color: #333; }
.picker-val { color: #666; }
.section-title { margin-bottom: 20rpx; font-weight: bold; color: #666; font-size: 28rpx; }
.tags-area { display: flex; flex-wrap: wrap; gap: 20rpx; margin-bottom: 50rpx; }
.tag { padding: 10rpx 24rpx; background: #fff; border-radius: 30rpx; color: #666; border: 1px solid #eee; }
.tag.active { background: #333; color: #fff; border-color: #333; }
.save-btn { background: #FF2442; color: #fff; border-radius: 50rpx; }