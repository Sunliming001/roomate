/* pages/index/index.wxss */
page { background: #F2F2F7; }

/* 顶部导航 - 毛玻璃效果 */
.header { 
  position: fixed; top: 0; left: 0; width: 100%; 
  background: rgba(255, 255, 255, 0.85); 
  backdrop-filter: blur(20px); /* 苹果毛玻璃 */
  z-index: 99; 
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}
.row { height: 44px; display: flex; align-items: center; padding: 0 32rpx; }

/* 城市选择 */
.city-picker { 
  font-weight: 600; font-size: 32rpx; margin-right: 24rpx; 
  display: flex; align-items: center; max-width: 180rpx;
}
.arrow { font-size: 20rpx; margin-left: 8rpx; color: var(--text-main); opacity: 0.6; }

/* 搜索框 - iOS 风格灰色胶囊 */
.search-box { 
  flex: 1; 
  background: #E3E3E8; 
  height: 72rpx; 
  border-radius: 36rpx; /* 纯圆角 */
  display: flex; align-items: center; padding: 0 24rpx; 
  transition: all 0.2s;
}
.search-box:active { background: #D1D1D6; }
.search-input { flex: 1; font-size: 28rpx; margin-left: 12rpx; height: 100%; color: #000; }
.clear-icon { font-size: 32rpx; color: #8E8E93; padding: 10rpx; }

/* 筛选栏 */
.filters { 
  position: fixed; left: 0; width: 100%; height: 90rpx; 
  background: rgba(255, 255, 255, 0.95); 
  display: flex; align-items: center; padding: 0 32rpx; gap: 20rpx; z-index: 98; 
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.02);
}
.tag { 
  padding: 12rpx 28rpx; 
  background: #F2F2F7; 
  border-radius: 30rpx; 
  font-size: 26rpx; 
  color: #1C1C1E; 
  font-weight: 500;
  border: 1rpx solid transparent;
  transition: all 0.2s;
}
.tag.act { 
  background: #1C1C1E; /* 选中变黑，像 iOS 的 Tag */
  color: #FFF; 
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
}

/* 瀑布流 */
.waterfall { display: flex; justify-content: space-between; padding: 20rpx 24rpx; }
.col { width: 48.5%; }

/* 卡片设计 */
.card { 
  background: #FFF; 
  border-radius: 20rpx; 
  overflow: hidden; 
  margin-bottom: 24rpx; 
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.03); 
  position: relative;
}
.cover { width: 100%; height: 360rpx; background: #F2F2F7; display: block; }
.info { padding: 20rpx; }
.tit { 
  font-weight: 600; font-size: 30rpx; margin-bottom: 12rpx; color: #000;
  display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; 
  line-height: 1.4;
}
.dots { display: flex; align-items: center; gap: 8rpx; margin-bottom: 16rpx; }
.dot { width: 14rpx; height: 14rpx; border-radius: 50%; border: 2rpx solid #C7C7CC; box-sizing: border-box; }
.dot.male { background: #34C759; border: none; } /* iOS Green */
.dot.female { background: #FF2442; border: none; } 
.dist { font-size: 22rpx; color: #8E8E93; margin-left: auto; background: #F2F2F7; padding: 4rpx 10rpx; border-radius: 8rpx; }

.btm { display: flex; justify-content: space-between; align-items: center; margin-top: 10rpx; }
.pub { display: flex; align-items: center; flex: 1; overflow: hidden; }
.avt { width: 40rpx; height: 40rpx; border-radius: 50%; margin-right: 12rpx; background: #F2F2F7; border: 1rpx solid rgba(0,0,0,0.05); }
.nm { font-size: 22rpx; color: #8E8E93; max-width: 140rpx; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.fav { font-size: 22rpx; color: #8E8E93; display: flex; align-items: center; }

/* 空状态 */
.empty-tip { text-align: center; margin-top: 200rpx; color: #AEAEB2; font-size: 28rpx; }