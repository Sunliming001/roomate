page { background: #F6F6F6; }
.header { position:fixed; top:0; left:0; width:100%; background:#fff; z-index:99; box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02); }
.row { height:44px; display:flex; align-items:center; padding:0 30rpx; }

.city-picker { font-weight:bold; font-size:30rpx; margin-right:20rpx; display:flex; align-items:center; max-width: 160rpx; }
.city-picker text { overflow:hidden; white-space:nowrap; text-overflow:ellipsis; }
.arrow { font-size:24rpx; margin-left:6rpx; color:#666; }

.search-box { flex:1; background:#f5f5f5; height:64rpx; border-radius:32rpx; display:flex; align-items:center; padding:0 20rpx; }
.search-input { flex:1; font-size:26rpx; margin-left:10rpx; height:100%; color: #333; }
.clear-icon { font-size: 32rpx; color: #999; padding: 0 10rpx; font-weight: bold; }

.filters { position:fixed; left:0; width:100%; height:80rpx; background:#fff; display:flex; align-items:center; padding:0 30rpx; gap:20rpx; z-index:98; border-bottom:1rpx solid #eee; }
.tag { padding:8rpx 24rpx; background:#f5f5f5; border-radius:30rpx; font-size:24rpx; color:#666; }
.tag.act { background:#333; color:#fff; font-weight:bold; }

.waterfall { display:flex; justify-content:space-between; padding:20rpx; }
.col { width:48.5%; }
.card { background:#fff; border-radius:16rpx; overflow:hidden; margin-bottom:20rpx; box-shadow:0 4rpx 12rpx rgba(0,0,0,0.03); }
.cover { width:100%; height:340rpx; background:#eee; }
.info { padding:16rpx; }
.tit { font-weight:bold; font-size:28rpx; margin-bottom:10rpx; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; overflow:hidden; }
.dots { display:flex; align-items:center; gap:8rpx; margin-bottom:12rpx; flex-wrap:wrap; }
.dot { width:16rpx; height:16rpx; border-radius:50%; border:2rpx solid #ccc; box-sizing: border-box; }
.dot.male { background:#4CAF50; border:none; }
.dot.female { background:#F48FB1; border:none; }
.dist { font-size:20rpx; color:#999; margin-left:auto; }
.btm { display:flex; justify-content:space-between; align-items:center; font-size:22rpx; color:#666; }
.pub { display:flex; align-items:center; overflow: hidden; flex: 1; }
.avt { width:36rpx; height:36rpx; border-radius:50%; margin-right:10rpx; background:#eee; flex-shrink: 0;}
.nm { max-width:160rpx; overflow:hidden; white-space:nowrap; text-overflow:ellipsis; }
.fav { color:#999; margin-left: 10rpx;}
.empty-tip { text-align:center; margin-top:200rpx; color:#999; font-size:28rpx; }